{
  "python.envFile": "${workspaceFolder}/.vs_env",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "${workspaceFolder}/tools/linux/python-3.10.2/bin/flake8",
  "python.linting.flake8Args": [
    "--max-line-length=120",
    "--ignore=E203,W503",
    "--per-file-ignores=\"__init__.py:F401\""
  ],
  "python.linting.pylintEnabled": true,
  "python.linting.pylintPath": "${workspaceFolder}/tools/linux/python-3.10.2/bin/pylint",
  "python.linting.pylintArgs": [
    "--max-line-length=120",
    "--extension-pkg-whitelist=cv2,PyQt5",
    "--good-names=i,j,k,ex,Run,_,x,y,z,w,t,dt",
    "--good-names-rgxs=[a-z][0-9]$"
  ],
  "python.sortImports.path": "${workspaceFolder}/tools/linux/python-3.10.2/bin/isort",
  "python.sortImports.args": ["--profile", "black"],
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/tools/linux/python-3.10.2/bin/python3",
  "python.formatting.autopep8Path": "${workspaceFolder}/tools/linux/python-3.10.2/bin/autopep8",
  // "python.formatting.provider": "autopep8",
  // "python.formatting.autopep8Args": ["--max-line-length=120", "--experimental"],
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "120"],
  "python.formatting.blackPath": "${workspaceFolder}/tools/linux/python-3.10.2/bin/black",
  "cmake.configureOnOpen": false
}
